<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/titleF"
        style="@style/text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/feedbackTitle" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:background="#FF2A00" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@null"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/driverLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:weightSum="3" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.05" >

                    <TextView
                        android:id="@+id/driverLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="0.1dp"
                        android:text="@string/engTime"
                        android:textColor="#353535"
                        android:textSize="14sp"
                        android:typeface="sans" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="@string/colon"
                        android:textColor="#353535"
                        android:textSize="14sp"
                        android:typeface="sans" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" >

                    <TextView
                        android:id="@+id/fareText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="0.1dp"
                        android:textColor="#353535"
                        android:textSize="14sp"
                        android:typeface="sans" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:weightSum="3" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.05" >

                    <TextView
                        android:id="@+id/startPonitfLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="0.1dp"
                        android:text="@string/startPonit"
                        android:textColor="#353535"
                        android:textSize="14sp"
                        android:typeface="sans" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="@string/colon"
                        android:textColor="#353535"
                        android:textSize="14sp"
                        android:typeface="sans" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" >

                    <TextView
                        android:id="@+id/startPonitf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="0.1dp"
                        android:textColor="#353535"
                        android:textSize="14sp"
                        android:typeface="sans" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:weightSum="3" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.05" >

                    <TextView
                        android:id="@+id/endPonitfLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="0.1dp"
                        android:text="@string/endPonit"
                        android:textColor="#353535"
                        android:textSize="14sp"
                        android:typeface="sans" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="@string/colon"
                        android:textColor="#353535"
                        android:textSize="14sp"
                        android:typeface="sans" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" >

                    <TextView
                        android:id="@+id/endPonitf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="0.1dp"
                        android:textColor="#353535"
                        android:textSize="14sp"
                        android:typeface="sans" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="#49CABA" />

            <RelativeLayout
                android:id="@+id/crLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="@null"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/rateLable"
                        style="@style/text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="@string/rateLabel"
                        android:textColor="#353535"
                        android:textStyle="bold" />

                    <RatingBar
                        android:id="@+id/jugunooRating"
                        style="@style/feedRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:max="5"
                        android:numStars="5"
                        android:progressDrawable="@drawable/rating_bar_theme" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/jugunoo_edittext_border" >

                        <EditText
                            android:id="@+id/feedbackText"
                            style="@style/edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:background="@drawable/jugunoo_edit_text_style"
                            android:ems="10"
                            android:gravity="start|top"
                            android:hint="@string/additionalInfo"
                            android:imeOptions="flagNoExtractUi"
                            android:inputType="text|textNoSuggestions"
                            android:lines="2"
                            android:padding="16dp"
                            android:singleLine="false"
                            android:textCursorDrawable="@drawable/jugunoo_edittext_cursor_color" >
                        </EditText>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/green_light"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tvMakeDriverFavourite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Make this driver as Favourite ?" />

                        <CheckBox
                            android:id="@+id/imgFavouriteDriver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:button="@drawable/driver_favourite"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/jugunoo_button_border"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/feedbackBtn"
                            style="@style/text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:background="@drawable/selector_button"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="@string/submit" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>