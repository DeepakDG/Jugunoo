<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5e5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@null"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/rounded_cell" >

                <TextView
                    android:id="@+id/tripPref"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#353535"
                    android:textSize="10sp"
                    android:typeface="sans" >
                </TextView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/startPonitLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="4dp"
                    android:gravity="left"
                    android:text="@string/trip_booking_id"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#353535"
                    android:textStyle="bold"
                    android:typeface="sans" >
                </TextView>

                <TextView
                    android:id="@+id/tvBookingId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="Small Text"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#353535"
                    android:typeface="sans" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#17B3E6"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/tvDateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="4dp"
                    android:text="@string/trip_date_time"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#353535"
                    android:typeface="sans"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llenddate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:gravity="left"
                android:text="@string/end_date"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#353535"
                android:textStyle="bold"
                android:typeface="sans" >
            </TextView>

            <TextView
                android:id="@+id/enddate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:text="Small text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#353535"
                android:typeface="sans" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCompany"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:gravity="left"
                android:text="@string/trip_company"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#353535"
                android:textStyle="bold"
                android:typeface="sans" >
            </TextView>

            <TextView
                android:id="@+id/tvCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:text="Small text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#353535"
                android:typeface="sans" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:gravity="left"
                android:singleLine="true"
                android:text="@string/startPonit"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#353535"
                android:textStyle="bold"
                android:typeface="sans" >
            </TextView>

            <EditText
                android:id="@+id/startPonit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="left"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:text="@null"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#353535"
                android:typeface="sans" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEndPoint"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:gravity="left"
                android:text="@string/endPonit"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#353535"
                android:textStyle="bold"
                android:typeface="sans" >
            </TextView>

            <EditText
                android:id="@+id/endPonit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="left"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:text="@null"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#353535"
                android:typeface="sans" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/llBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" >

                <TextView
                    android:id="@+id/tvbooktext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="text"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#353535"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvbookname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="text"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#353535"
                    android:typeface="sans"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:gravity="left"
                    android:text="@string/trip_vehicle_no"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#353535"
                    android:typeface="sans"
                    android:visibility="gone" >
                </TextView>

                <TextView
                    android:id="@+id/tvVehicleNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@null"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#353535"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp" >

                <EditText
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="textNoSuggestions"
                    android:singleLine="true"
                    android:text="@null"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#353535"
                    android:typeface="sans" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>