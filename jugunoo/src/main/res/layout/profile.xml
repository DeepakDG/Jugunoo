<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_bg"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/normal_pheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/account"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Account Details"
                    android:textColor="#0266C8"
                    android:typeface="sans" />
            </LinearLayout>

            <View
                android:id="@+id/normal_pview"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#0266C8"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rl_profilemain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#f2f2f2" >

                <ImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/user" />

                <LinearLayout
                    android:id="@+id/accountdetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/profile_pic"
                    android:orientation="vertical"
                    android:padding="5dp" >

                    <LinearLayout
                        android:id="@+id/accountdetailsll2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <EditText
                            android:id="@+id/namep"
                            style="@style/text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:focusable="false"
                            android:padding="5dp"
                            android:singleLine="true" />

                        <Button
                            android:id="@+id/but_emailedit"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#b2b2b2"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/mobilep"
                        style="@style/text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:padding="5dp"
                        android:singleLine="true" />

                    <View
                        android:id="@+id/mobile_view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#b2b2b2"
                        android:padding="5dp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/normal_emailpll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/accountdetails"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <EditText
                        android:id="@+id/normal_emailp"
                        style="@style/text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:singleLine="true" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/pcorporate_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="#f2f2f2"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/premove"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:padding="5dp"
                    android:text="Corporate Details"
                    android:textColor="#0266C8"
                    android:typeface="sans" />

                <Button
                    android:id="@+id/paddcorp"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/corporate_detailsll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/corporate_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/remove"
                        style="@style/text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:padding="5dp"
                        android:text="Corporate Details"
                        android:textColor="#0266C8"
                        android:typeface="sans" />

                    <Button
                        android:id="@+id/but_remove"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fcompanydetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#0266C8" />

                    <TextView
                        android:id="@+id/txt_Compname"
                        style="@style/text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:padding="5dp"
                        android:singleLine="true" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#b2b2b2"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/emailp"
                        style="@style/text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:padding="5dp"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/weeklychartll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/weekly"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Weekly Trip Chart"
                    android:textColor="#0266C8"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/txt_export"
                    style="@style/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/translucent_white"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="Export"
                    android:textColor="#FF4040"
                    android:typeface="sans" />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:shrinkColumns="*"
                android:stretchColumns="*" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#0266C8" />

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f2f2f2" >

                    <TextView
                        android:id="@+id/booking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dip"
                        android:text="Booking"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/profilctrip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dip"
                        android:text="No.of Trips"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/profilecdist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dip"
                        android:text="Distance"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/profileckms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dip"
                        android:text="Amount"
                        android:textColor="#000000" />
                </TableRow>

                <TableRow
                    android:id="@+id/personal_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" >

                    <TextView
                        android:id="@+id/pbooking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dip"
                        android:text="Personal"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/txt_ptrips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dip"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/txt_pkms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dip"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/txt_pamount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dip"
                        android:textColor="#000000" />
                </TableRow>

                <TableRow
                    android:id="@+id/corporate_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" >

                    <TextView
                        android:id="@+id/cbooking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dip"
                        android:text="Corporate"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/txt_ctrips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dip"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/txt_ckms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dip"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/txt_camount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dip"
                        android:textColor="#000000" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/favoritell_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/favorite"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Favorite Drivers"
                    android:textColor="#0266C8"
                    android:typeface="sans" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#0266C8" />

                <LinearLayout
                    android:id="@+id/favoritell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp" >

                    <Button
                        android:id="@+id/favorite_but"
                        style="@style/text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#f2f2f2"
                        android:drawableRight="@drawable/arrow"
                        android:gravity="left|center"
                        android:padding="4dp"
                        android:text="My Favorite Drivers" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/progressll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <ProgressBar
            android:id="@+id/profileProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_ErrorState"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/profile_networktxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/network_failed_msg"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/profile_retrybtn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_button"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/retrybtn" />
    </LinearLayout>

</RelativeLayout>